@page "/"

<PageTitle>PlumbBuddy</PageTitle>
<MudContainer MaxWidth="MaxWidth.Large" Class="mt-6">
    <MudCarousel TData="object" AutoCycle AutoCycleTime="@(TimeSpan.FromSeconds(10))" EnableSwipeGesture ShowArrows ShowBullets Class="mud-width-full rounded" Style="height: calc(100vh - 210px);">
        <MudCarouselItem Color="Color.Success" Style="background-image: url(/img/boseong.jpg); background-size: cover; background-position: center;">
            <MudStack Class="pt-8 pl-8" Style="width: 85%; height: 100%;">
                <MudPaper Elevation="5" Class="pa-4 mud-success">
                    <MudStack>
                        <MudTextM3 Typo="TypoM3.Title">PlumbBuddy 1.3 is Here!</MudTextM3>
                        <MudPaper Outlined Class="pa-4">
                            <MudTextM3>
                                Your buddy to help with mods and saves now also helps you help other mod users if you understand multiple languages!
								<MudLink Href="/download">Download it now</MudLink> for your Windows PC or Mac!
                            </MudTextM3>
                        </MudPaper>
                    </MudStack>
                </MudPaper>
            </MudStack>
        </MudCarouselItem>
		<MudCarouselItem Color="Color.Primary" Style="background-image: url(/img/mod_health_scans.jpg); background-size: cover; background-position: center;">
			<MudStack Class="pt-8 pl-8" Style="width: 85%; height: 100%;">
				<MudPaper Elevation="5" Class="pa-4 mud-theme-primary">
					<MudStack>
						<MudTextM3 Typo="TypoM3.Title"><strong>Mod Health</strong></MudTextM3>
						<MudPaper Outlined Class="pa-4">
							<MudTextM3>
								Mod Health helps you by <strong>Ensuring Optimal Game Options</strong>, <strong>Finding Problems in Your Mods Folder</strong>, <strong>Pointing Out Essentials You're Missing</strong>, and <strong>Performing Analysis of Your Game &amp; Mods</strong>.
								<MudLink Href="/features/mod-health">Click here</MudLink> to learn more.
							</MudTextM3>
						</MudPaper>
					</MudStack>
				</MudPaper>
			</MudStack>
		</MudCarouselItem>
		<MudCarouselItem Color="Color.Secondary" Style="background-image: url(/img/arcane_vault.jpg); background-size: cover; background-position: center;">
			<MudStack Class="pt-8 pl-8" Style="width: 85%; height: 100%;">
				<MudPaper Elevation="5" Class="pa-4 mud-theme-secondary">
					<MudStack>
						<MudStack Row AlignItems="AlignItems.Center">
							<MudTextM3 Typo="TypoM3.Title">
								<strong>Archivist</strong>
							</MudTextM3>
						</MudStack>
						<MudPaper Outlined Class="pa-4">
							<MudTextM3>
								Archivist is ready to help you never lose a save again.
								<MudLink Href="/features/archivist">Click here</MudLink> to learn more.
							</MudTextM3>
						</MudPaper>
					</MudStack>
				</MudPaper>
			</MudStack>
		</MudCarouselItem>
		<MudCarouselItem Color="Color.Secondary" Style="background-image: url(/img/santorini.jpg); background-size: cover; background-position: center;">
			<MudStack Class="pt-8 pl-8" Style="width: 85%; height: 100%;">
				<MudPaper Elevation="5" Class="pa-4 mud-theme-secondary">
					<MudStack>
						<MudStack Row AlignItems="AlignItems.Center">
							<MudTextM3 Typo="TypoM3.Title">
								<strong>Parlay</strong>
							</MudTextM3>
							<MudIcon Icon="@MaterialDesignIcons.Normal.NewBox" Size="Size.Large" />
						</MudStack>
						<MudPaper Outlined Class="pa-4">
							<MudTextM3>
								Is there a mod that you love but itâ€™s just not available in your language? Parlay is there for you.
								<MudLink Href="/features/parlay">Click here</MudLink> to learn more.
							</MudTextM3>
						</MudPaper>
					</MudStack>
				</MudPaper>
			</MudStack>
		</MudCarouselItem>
		<MudCarouselItem Color="Color.Tertiary" Style="background-image: url(/img/construction_workers.jpg); background-size: cover; background-position: center;">
            <MudStack Class="pt-8 pl-8" Style="width: 85%; height: 100%;">
                <MudPaper Elevation="5" Class="pa-4 mud-theme-tertiary">
                    <MudStack>
                        <MudTextM3 Typo="TypoM3.Title"><strong>Manifest Editor</strong></MudTextM3>
                        <MudPaper Outlined Class="pa-4">
                            <MudTextM3>
								<em>Finally</em>, Creators can make mods self-describing: identifying <strong>who</strong> made them, <strong>where</strong> they came from, and <strong>what</strong> they need.
                                If you're a mod creator who would like to make your mods easier for players to install and configure, <MudLink Href="/features/manifest-editor">click here</MudLink> to learn more.
                            </MudTextM3>
                        </MudPaper>
                    </MudStack>
                </MudPaper>
            </MudStack>
        </MudCarouselItem>
    </MudCarousel>
    <MudGrid Justify="Justify.Center" Spacing="4" Class="align-center mt-n1">
        <MudHidden Breakpoint="Breakpoint.MdAndDown">
            <MudItem>
                <MudAlert Icon="@MaterialDesignIcons.Normal.Application">Current version: <strong>@currentVersion</strong></MudAlert>
            </MudItem>
            <MudItem>
                <MudAlert Severity="Severity.Success" Icon="@MaterialDesignIcons.Normal.Certificate">Lifecycle stage: <strong>Stable</strong></MudAlert>
            </MudItem>
        </MudHidden>
        <MudHidden Breakpoint="Breakpoint.MdAndDown" Invert>
            <MudItem>
                <MudAlert Icon="@MaterialDesignIcons.Normal.Application"><strong>@currentVersion</strong></MudAlert>
            </MudItem>
            <MudItem>
                <MudBadge Icon="@MaterialDesignIcons.Normal.Check" Color="Color.Success" Origin="Origin.CenterRight" Overlap>
                    <MudIcon Icon="@MaterialDesignIcons.Normal.Certificate" Size="Size.Large" />
                </MudBadge>
            </MudItem>
        </MudHidden>
        <MudHidden Breakpoint="Breakpoint.LgAndDown">
            <MudItem>
                <MudAlert Severity="Severity.Success">Windows release status: <strong>Okay</strong></MudAlert>
            </MudItem>
            <MudItem>
                <MudAlert Severity="Severity.Success">macOS release status: <strong>Okay</strong></MudAlert>
            </MudItem>
        </MudHidden>
        <MudHidden Breakpoint="Breakpoint.LgAndDown" Invert>
            <MudItem>
                <MudBadge Icon="@MaterialDesignIcons.Normal.Check" Color="Color.Success" Origin="Origin.CenterRight" Overlap>
                    <MudIcon Icon="@MaterialDesignIcons.Normal.Microsoft" Size="Size.Large" />
                </MudBadge>
            </MudItem>
            <MudItem>
                <MudBadge Icon="@MaterialDesignIcons.Normal.Check" Color="Color.Success" Origin="Origin.CenterRight" Overlap>
                    <MudIcon Icon="@MaterialDesignIcons.Normal.Apple" Size="Size.Large" />
                </MudBadge>
            </MudItem>
        </MudHidden>
    </MudGrid>
</MudContainer>
